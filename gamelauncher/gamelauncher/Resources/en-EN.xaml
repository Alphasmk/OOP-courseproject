<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="LoginTitle" TargetType="TextBlock">
        <Setter Property="Text" Value="Login" />
    </Style>
    <Style x:Key="LoginEmailAddress" TargetType="TextBlock">
        <Setter Property="Text" Value="Email address" />
    </Style>
    <Style x:Key="EmailError" TargetType="TextBlock">
        <Setter Property="Text" Value="Invalid email address" />
    </Style>
    <Style x:Key="LoginPassword" TargetType="TextBlock">
        <Setter Property="Text" Value="Password" />
    </Style>
    <Style x:Key="ForgotPassword" TargetType="TextBlock">
        <Setter Property="Text" Value="Forgot your password?" />
    </Style>
    <Style x:Key="LoginButton" TargetType="Button">
        <Setter Property="Content" Value="Login" />
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Padding="5" Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="RegisterQA" TargetType="TextBlock">
        <Setter Property="Text" Value="Don't have an account yet?" />
    </Style>
    <Style x:Key="CreateAccountButton" TargetType="TextBlock">
        <Setter Property="Text" Value="Create an account" />
    </Style>
    <Style x:Key="RegisterTitle" TargetType="TextBlock">
        <Setter Property="Text" Value="Register" />
    </Style>
    <Style x:Key="PasswordRepeat" TargetType="TextBlock">
        <Setter Property="Text" Value="Repeat password" />
    </Style>
    <Style x:Key="RegisterButton" TargetType="Button">
        <Setter Property="Content" Value="Register" />
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Padding="5" Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="ReturnButton" TargetType="TextBlock">
        <Setter Property="Text" Value="Return" />
    </Style>
    <Style x:Key="LanguageIMG" TargetType="Image">
        <Setter Property="Source" Value="/img/usa.png" />
    </Style>
    <Style x:Key="PasswordError" TargetType="TextBlock">
        <Setter Property="Text" Value="Bad Password" />
    </Style>
    <Style x:Key="RepeatPasswordError" TargetType="TextBlock">
        <Setter Property="Text" Value="The passwords do not match" />
    </Style>
    <Style x:Key="PasswordToolTip1" TargetType="TextBlock">
        <Setter Property="Text" Value="Your password must:" />
    </Style>
    <Style x:Key="PasswordToolTip2" TargetType="TextBlock">
        <Setter Property="Text" Value="• Be between 8 and 20 characters." />
    </Style>
    <Style x:Key="PasswordToolTip3" TargetType="TextBlock">
        <Setter Property="Text" Value="• Include at least one lowercase letter (a-z)." />
    </Style>
    <Style x:Key="PasswordToolTip4" TargetType="TextBlock">
        <Setter Property="Text" Value="• Include at least one uppercase letter (A-Z)." />
    </Style>
    <Style x:Key="PasswordToolTip5" TargetType="TextBlock">
        <Setter Property="Text" Value="• Include at least one digit (0-9)." />
    </Style>
    <Style x:Key="MenuBorderForButton" TargetType="Border">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="#3E3E3E" />
            </Setter.Value>
        </Setter>
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="1" ScaleY="1" />
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <!-- Анимация изменения цвета -->
                            <ColorAnimation
                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                            To="#B824E4"
                            Duration="0:0:0.2" />

                            <!-- Анимация увеличения -->
                            <DoubleAnimation
                            Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                            To="1.05"
                            Duration="0:0:0.2" />
                            <DoubleAnimation
                            Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                            To="1.05"
                            Duration="0:0:0.2" />
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>

                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <!-- Возврат цвета -->
                            <ColorAnimation
                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                            To="#3E3E3E"
                            Duration="0:0:0.2" />

                            <!-- Возврат размера -->
                            <DoubleAnimation
                            Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                            To="1"
                            Duration="0:0:0.2" />
                            <DoubleAnimation
                            Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                            To="1"
                            Duration="0:0:0.2" />
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="MenuButton" TargetType="Button">
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Padding="5" Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>