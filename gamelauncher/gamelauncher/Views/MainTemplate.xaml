<Window x:Class="gamelauncher.Views.MainTemplate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gamelauncher.Views"
        mc:Ignorable="d"
                Title="Game Launcher" Height="650" Width="1100"
        Icon="/img/logo.png"
        MinWidth="900" MinHeight="700"
        WindowStyle="None"
        Background="Transparent">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="5" ResizeBorderThickness="2"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <Border Background="#1E1E1E" Height="30" MouseLeftButtonDown="Border_MouseLeftButtonDown" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Background="Transparent" BorderThickness="0" Click="MinimizeButton_Click" Margin="0, 5, 10, 0">
                    <Image Source="/img/minus-button.png" Width="20" Height="20"/>
                </Button>
                <Button Background="Transparent" BorderThickness="0" Click="MaximizeButton_Click" Margin="0, 5, 10, 0">
                    <Image Source="/img/share.png" Width="20" Height="20"/>
                </Button>
                <Button Background="Transparent" BorderThickness="0" Click="CloseButton_Click" Margin="0, 5, 10, 0">
                    <Image Source="/img/x.png" Width="20" Height="20"/>
                </Button>
            </StackPanel>
        </Border>
        <Grid Name="auth" Background="#181818" Margin="0, 30, 0, 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="15*"></RowDefinition>
                <RowDefinition Height="75*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="12*" MaxWidth="150"></ColumnDefinition>
                <ColumnDefinition Width="88*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Border Background="#1E1E1E" Grid.Column="0">
                <Image Source="/img/logo.png" Width="70" Grid.Column="0" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0, 20, 0, 0"/>
            </Border>
            <Border Background="#1E1E1E" Grid.Column="0" Grid.Row="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <!-- Занимает всё доступное пространство -->
                        <RowDefinition Height="Auto"/>
                        <!-- Занимает только необходимое пространство -->
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Vertical" Grid.Row="0">
                    <Border Background="#3E3E3E" Width="65" Height="65" CornerRadius="10" Margin="0, 40, 0, 15">
                            <Image Source="/img/basket.png" Width="25" Height="25" Opacity="0.7"/>
                    </Border>
                    <Border Background="#3E3E3E" Width="65" Height="65" CornerRadius="10" Margin="0, 0, 0, 15">
                            <Image Source="/img/heart.png" Width="25" Height="25" Opacity="0.7"/>
                    </Border>
                    <Border Background="#3E3E3E" Width="65" Height="65" CornerRadius="10" Margin="0, 0, 0, 15">
                            <Image Source="/img/library.png" Width="25" Height="25" Opacity="0.7"/>
                    </Border>
                    <Border Background="#3E3E3E" Width="65" Height="65" CornerRadius="10" Margin="0, 0, 0, 15">
                            <Image Source="/img/info.png" Width="25" Height="25" Opacity="0.7"/>
                    </Border>
                    </StackPanel>
                    <Border Background="#3E3E3E" Width="65" Height="65" CornerRadius="32.5" Margin="0, 0, 0, 15" VerticalAlignment="Center" Grid.Row="2">
                        <Image Source="/img/ava.png" Width="25" Height="25"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
