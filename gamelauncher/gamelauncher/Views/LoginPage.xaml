<Window
    x:Class="gamelauncher.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gamelauncher="clr-namespace:gamelauncher"
    xmlns:local1="clr-namespace:gamelauncher.Validation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:validationrule="clr-namespace:gamelauncher.Validation"
    xmlns:viewmodels="clr-namespace:gamelauncher.ViewModels"
    Title="Game Launcher"
    Width="1100"
    Height="650"
    MinWidth="900"
    MinHeight="700"
    Background="Transparent"
    Icon="/img/logo.png"
    WindowStyle="None"
    mc:Ignorable="d">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="5" ResizeBorderThickness="2" />
    </WindowChrome.WindowChrome>
    <!--<Window.DataContext>
        <viewmodels:LoginViewModel />
    </Window.DataContext>-->
    <Window.Resources>
        <local1:ValidationErrorToVisibilityConverter x:Key="ValidationErrorToVisibilityConverter" />
    </Window.Resources>
    <Grid>
        <Border
            Height="30"
            VerticalAlignment="Top"
            Background="#1E1E1E"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button
                    Margin="0,5,10,0"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="MinimizeButton_Click">
                    <Image
                        Width="20"
                        Height="20"
                        Source="/img/minus-button.png" />
                </Button>
                <Button
                    Margin="0,5,10,0"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="MaximizeButton_Click">
                    <Image
                        Width="20"
                        Height="20"
                        Source="/img/share.png" />
                </Button>
                <Button
                    Margin="0,5,10,0"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="CloseButton_Click">
                    <Image
                        Width="20"
                        Height="20"
                        Source="/img/x.png" />
                </Button>
            </StackPanel>
        </Border>
        <Grid
            Name="auth"
            Margin="0,30,0,0"
            Background="#181818">
            <Grid.RowDefinitions>
                <RowDefinition Height="15*" />
                <RowDefinition Height="70*" />
                <RowDefinition Height="15*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*" />
                <ColumnDefinition Width="70*" />
                <ColumnDefinition Width="15*" />
            </Grid.ColumnDefinitions>
            <Border
                Grid.Row="1"
                Grid.Column="1"
                MaxWidth="500px"
                MaxHeight="500"
                Margin="10"
                Background="#1E1E1E"
                CornerRadius="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!--  Для верхних элементов  -->
                        <RowDefinition Height="Auto" />
                        <!--  Для пустого пространства  -->
                        <RowDefinition Height="*" />
                        <!--  Для нижних элементов  -->
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0">
                        <Image
                            Width="57"
                            Height="64"
                            Margin="0,30,0,0"
                            HorizontalAlignment="Center"
                            Source="/img/logo.png" />
                        <TextBlock
                            x:Name="voi"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Center"
                            FontFamily="pack://application:,,,/fonts/Ubuntu-Bold.ttf #Ubuntu"
                            FontSize="22"
                            FontWeight="Bold"
                            Foreground="White"
                            Style="{DynamicResource LoginTitle}" />
                        <TextBlock
                            Margin="20,10,0,0"
                            HorizontalAlignment="Left"
                            FontFamily="pack://application:,,,/fonts/ZenMaruGothic-Bold.ttf #Zen Maru Gothic"
                            FontSize="15"
                            Foreground="#7A7878"
                            Style="{DynamicResource LoginEmailAddress}" />
                        <Border
                            x:Name="EmailBorder"
                            Margin="20,10,20,0"
                            Background="#252525"
                            BorderThickness="1"
                            CornerRadius="10"
                            UseLayoutRounding="True">
                            <TextBox
                                x:Name="LoginEmailTextBox"
                                Height="40"
                                Padding="5"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                FontFamily="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu"
                                FontSize="15"
                                Foreground="White"
                                GotFocus="TextBox_GotFocus"
                                LostFocus="TextBox_LostFocus"
                                Tag="{Binding ElementName=EmailBorder}"
                                TextChanged="LoginEmailTextBox_TextChanged"
                                Validation.ErrorTemplate="{x:Null}">
                                <TextBox.Text>
                                    <Binding
                                        Path="Email"
                                        UpdateSourceTrigger="PropertyChanged"
                                        ValidatesOnDataErrors="True"
                                        ValidatesOnExceptions="True"
                                        Mode="TwoWay">
                                        <Binding.ValidationRules>
                                            <validationrule:EmailValidationRule />
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                        </Border>
                        <TextBlock
                            Name="EmailErrorTextBlock"
                            Margin="0,0,20,0"
                            HorizontalAlignment="Right"
                            FontFamily="pack://application:,,,/fonts/ZenMaruGothic-Bold.ttf #Zen Maru Gothic"
                            Foreground="#FF0073"
                            Style="{DynamicResource EmailError}"
                            Visibility="{Binding ElementName=LoginEmailTextBox, Path=(Validation.HasError), Converter={StaticResource ValidationErrorToVisibilityConverter}, ConverterParameter=False}" />
                        <TextBlock
                            Margin="20,10,0,0"
                            HorizontalAlignment="Left"
                            FontFamily="pack://application:,,,/fonts/ZenMaruGothic-Bold.ttf #Zen Maru Gothic"
                            FontSize="15"
                            Foreground="#7A7878"
                            Style="{DynamicResource LoginPassword}" />
                        <Border
                            x:Name="PasswordBorder"
                            Margin="20,10,20,0"
                            Background="#252525"
                            BorderThickness="1"
                            CornerRadius="10"
                            UseLayoutRounding="True">
                            <PasswordBox
                                x:Name="LoginPasswordBox"
                                Height="40"
                                Padding="5"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                FontFamily="pack://application:,,,/fonts/Ubuntu-Bold.ttf #Ubuntu"
                                FontSize="15"
                                Foreground="White"
                                GotFocus="TextBox_GotFocus"
                                LostFocus="TextBox_LostFocus"
                                PasswordChanged="PasswordBox_PasswordChanged"
                                Tag="{Binding ElementName=PasswordBorder}" />
                        </Border>
                        <TextBlock
                            Width="155"
                            Margin="20,0,0,0"
                            HorizontalAlignment="Left"
                            FontFamily="pack://application:,,,/fonts/ZenMaruGothic-Bold.ttf #Zen Maru Gothic"
                            FontSize="15"
                            Foreground="#7A7878"
                            Style="{DynamicResource ForgotPassword}"
                            TextDecorations="Underline" />
                        <Border Margin="20,25,20,0" CornerRadius="5">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <SolidColorBrush Color="#9319B8" />
                                        </Setter.Value>
                                    </Setter>

                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#B824E4"
                                                            Duration="0:0:0.2" />

                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>

                                            <Trigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#9319B8"
                                                            Duration="0:0:0.2" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Button
                                Height="40"
                                BorderThickness="0"
                                Command="{Binding LoginCommand}"
                                FontFamily="pack://application:,,,/fonts/ZenMaruGothic-Bold.ttf #Zen Maru Gothic"
                                FontSize="15"
                                Style="{DynamicResource LoginButton}" />
                        </Border>
                    </StackPanel>
                    <Grid Grid.Row="1" />
                    <StackPanel Grid.Row="2" VerticalAlignment="Center">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="pack://application:,,,/fonts/ZenMaruGothic-Bold.ttf #Zen Maru Gothic"
                            FontSize="15"
                            Foreground="#7A7878"
                            Style="{DynamicResource RegisterQA}" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Cursor="Hand"
                            FontFamily="pack://application:,,,/fonts/ZenMaruGothic-Bold.ttf #Zen Maru Gothic"
                            FontSize="15"
                            Foreground="#7A7878"
                            MouseLeftButtonDown="ToggleCreateAccount_MouseLeftButtonDown"
                            Style="{DynamicResource CreateAccountButton}"
                            TextDecorations="Underline">
                            <TextBlock />
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>
            <Image
                x:Name="ToggleLanguage"
                Grid.Row="2"
                Grid.Column="2"
                Width="50"
                MouseDown="ToggleLanguage_MouseDown"
                Style="{DynamicResource LanguageIMG}" />
        </Grid>
    </Grid>
</Window>
