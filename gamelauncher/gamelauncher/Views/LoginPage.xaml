<Window x:Class="gamelauncher.Views.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:gamelauncher="clr-namespace:gamelauncher"
        xmlns:validationrule="clr-namespace:gamelauncher.Validation"
        xmlns:viewmodels="clr-namespace:gamelauncher.ViewModels"
        xmlns:local1="clr-namespace:gamelauncher.Validation"
        mc:Ignorable="d"
        Title="Game Launcher" Height="650" Width="1100"
        Icon="/img/logo.png"
        MinWidth="900" MinHeight="700"
        WindowStyle="None"
        Background="Transparent">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="5" ResizeBorderThickness="2"/>
    </WindowChrome.WindowChrome>
    <Window.DataContext>
        <viewmodels:EmailViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <local1:ValidationErrorToVisibilityConverter x:Key="ValidationErrorToVisibilityConverter"/>
    </Window.Resources>
    <Grid>
        <Border Background="#1E1E1E" Height="30" MouseLeftButtonDown="Border_MouseLeftButtonDown" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Background="Transparent" BorderThickness="0" Click="MinimizeButton_Click" Margin="0, 5, 10, 0">
                    <Image Source="/img/minus-button.png" Width="20" Height="20"/>
                </Button>
                <Button Background="Transparent" BorderThickness="0" Click="MaximizeButton_Click" Margin="0, 5, 10, 0">
                    <Image Source="/img/share.png" Width="20" Height="20"/>
                </Button>
                <Button Background="Transparent" BorderThickness="0" Click="CloseButton_Click" Margin="0, 5, 10, 0">
                    <Image Source="/img/x.png" Width="20" Height="20"/>
                </Button>
            </StackPanel>
        </Border>
        <Grid Name="auth" Background="#181818" Margin="0, 30, 0, 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="15*"></RowDefinition>
                <RowDefinition Height="70*"></RowDefinition>
                <RowDefinition Height="15*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*"></ColumnDefinition>
                <ColumnDefinition Width="70*"></ColumnDefinition>
                <ColumnDefinition Width="15*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="1" Grid.Row="1" Background="#1E1E1E" CornerRadius="20" Margin="10" MaxWidth="500px" MaxHeight="500">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Для верхних элементов -->
                        <RowDefinition Height="Auto"/>
                        <!-- Для пустого пространства -->
                        <RowDefinition Height="*"/>
                        <!-- Для нижних элементов -->
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0">
                        <Image Source="/img/logo.png" HorizontalAlignment="Center" Margin="0,30,0,0" Width="57" Height="64"/>
                        <TextBlock HorizontalAlignment="Center"
                            FontSize="22"
                            Foreground="White"
                            FontFamily="pack://application:,,,/fonts/Ubuntu-Bold.ttf #Ubuntu"
                            x:Name="voi" FontWeight="Bold"
                            Margin="0, 10, 0, 0" Style="{DynamicResource LoginTitle}">
                        </TextBlock>
                        <TextBlock HorizontalAlignment="Left"
                            FontSize="15"
                            FontFamily="pack://application:,,,/fonts/ZenMaruGothic-Bold.ttf #Zen Maru Gothic"
                            Foreground="#7A7878"
                            Margin="20, 10, 0, 0" Style="{DynamicResource LoginEmailAddress}">
                        </TextBlock>
                        <Border Margin="20, 10, 20, 0" CornerRadius="10" UseLayoutRounding="True" BorderThickness="1" Background="#252525">
                            <TextBox 
                            FontFamily="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu"
                            Height="40"
                            Background="Transparent"
                            VerticalContentAlignment="Center"
                            BorderThickness="0"
                            Padding="5"
                            FontSize="15"
                            Foreground="White"
                            x:Name="LoginEmailTextBox"
                            Validation.ErrorTemplate="{x:Null}">
                                <TextBox.Text>
                                    <Binding Path="Email" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="True" ValidatesOnExceptions="True">
                                        <Binding.ValidationRules>
                                            <validationrule:EmailValidationRule/>
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                        </Border>
                        <TextBlock
                            FontFamily="pack://application:,,,/fonts/ZenMaruGothic-Bold.ttf #Zen Maru Gothic"
                            Foreground="#FF0073"
                            Margin="0, 0, 20, 0"
                            HorizontalAlignment="Right"
                            Name="EmailErrorTextBlock"
                            Visibility="{Binding ElementName=LoginEmailTextBox, Path=(Validation.HasError), 
                        Converter={StaticResource ValidationErrorToVisibilityConverter}, 
                        ConverterParameter=False}"
                            Style="{DynamicResource EmailError}">
                        </TextBlock>
                        <TextBlock HorizontalAlignment="Left"
                            FontSize="15"
                            FontFamily="pack://application:,,,/fonts/ZenMaruGothic-Bold.ttf #Zen Maru Gothic"
                            Foreground="#7A7878"
                            Margin="20, 10, 0, 0"
                            Style="{DynamicResource LoginPassword}">
                        </TextBlock>
                        <Border Margin="20, 10, 20, 0" CornerRadius="10" UseLayoutRounding="True" BorderThickness="1" Background="#252525">
                            <PasswordBox
                            FontFamily="pack://application:,,,/fonts/Ubuntu-Bold.ttf #Ubuntu"
                            Height="40"
                            Background="Transparent"
                            VerticalContentAlignment="Center"
                            BorderThickness="0"
                            Padding="5"
                            FontSize="15"
                            Foreground="White">
                            </PasswordBox>
                        </Border>
                        <TextBlock
                            FontSize="15"
                            FontFamily="pack://application:,,,/fonts/ZenMaruGothic-Bold.ttf #Zen Maru Gothic"
                            Foreground="#7A7878"
                            Margin="20, 0, 0, 0" TextDecorations="Underline" Width="155" HorizontalAlignment="Left"
                            Style="{DynamicResource ForgotPassword}">
                        </TextBlock>
                        <Border Margin = "20, 25, 20, 0" CornerRadius="5">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <SolidColorBrush Color="#9319B8"/>
                                        </Setter.Value>
                                    </Setter>

                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation 
                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                    To="#B824E4" Duration="0:0:0.2"/>
                                                        
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>

                                            <Trigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation 
                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                    To="#9319B8" Duration="0:0:0.2"/>
                                                       
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Button Height="40" BorderThickness="0"
                                FontSize="15"
                                FontFamily="pack://application:,,,/fonts/ZenMaruGothic-Bold.ttf #Zen Maru Gothic"
                                Style="{DynamicResource LoginButton}">
                            </Button>
                        </Border>
                    </StackPanel>
                    <Grid Grid.Row="1"/>
                    <StackPanel Grid.Row="2" VerticalAlignment="Center">
                        <TextBlock HorizontalAlignment="Center"
                            FontSize="15"
                            FontFamily="pack://application:,,,/fonts/ZenMaruGothic-Bold.ttf #Zen Maru Gothic"
                            Foreground="#7A7878" VerticalAlignment="Center"
                            Style="{DynamicResource RegisterQA}">
                        </TextBlock>
                        <TextBlock                                                        FontSize="15"
                            FontFamily="pack://application:,,,/fonts/ZenMaruGothic-Bold.ttf #Zen Maru Gothic"
                            Foreground="#7A7878" VerticalAlignment="Center" HorizontalAlignment="Center" TextDecorations="Underline"
                            Style="{DynamicResource CreateAccountButton}" MouseLeftButtonDown="ToggleCreateAccount_MouseLeftButtonDown" Cursor="Hand">
                        <TextBlock>
                            
                        </TextBlock>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>
            <Image x:Name="ToggleLanguage" Style="{DynamicResource LanguageIMG}"
               MouseDown="ToggleLanguage_MouseDown" 
               Width="50" Grid.Row="2" Grid.Column="2"/>
        </Grid>
    </Grid>
</Window>
