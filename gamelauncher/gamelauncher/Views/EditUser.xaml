<Window
    x:Class="gamelauncher.Views.EditUser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:gamelauncher.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="EditUser"
    Width="580"
    Height="370"
    AllowsTransparency="True"
    Background="Transparent"
    Opacity="1"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <Storyboard x:Key="WindowFadeIn">
            <DoubleAnimation
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1"
                Duration="0:0:0.2" />
        </Storyboard>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource WindowFadeIn}" />
        </EventTrigger>
    </Window.Triggers>
    <Border
        Background="#252525"
        BorderBrush="#5D4465"
        BorderThickness="2"
        CornerRadius="20">
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="15"
                Opacity="0.35"
                ShadowDepth="0"
                Color="Black" />
        </Border.Effect>
        <Grid>
            <StackPanel Orientation="Vertical">
                <TextBlock
                    x:Name="Title"
                    Height="50"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontFamily="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu"
                    FontSize="18"
                    Foreground="White"
                    Text="{Binding Email, StringFormat='Изменение пользователя: {0}'}" />
                <TextBlock
                    x:Name="UnderTitle"
                    Height="50"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontFamily="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu"
                    FontSize="16"
                    Foreground="White">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="ID: {0}, создан: {1}">
                            <Binding Path="Id" />
                            <Binding Path="Created" />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <StackPanel
                    Margin="0,-10,0,0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <StackPanel VerticalAlignment="Center" Orientation="Vertical">
                        <StackPanel.Resources>
                            <Style x:Key="TextBlockStyle" TargetType="TextBlock">
                                <Setter Property="Margin" Value="0,19,0,19" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="FontFamily" Value="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu" />
                                <Setter Property="FontSize" Value="18" />
                                <Setter Property="TextAlignment" Value="Right" />
                            </Style>
                        </StackPanel.Resources>
                        <TextBlock Style="{StaticResource TextBlockStyle}" Text="Почта:" />
                        <TextBlock Style="{StaticResource TextBlockStyle}" Text="Имя пользователя:" />
                        <TextBlock Style="{StaticResource TextBlockStyle}" Text="Баланс:" />
                    </StackPanel>
                    <StackPanel VerticalAlignment="Center" Orientation="Vertical">
                        <StackPanel.Resources>
                            <Style x:Key="TextBoxStyle" TargetType="TextBox">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="VerticalContentAlignment" Value="Center" />
                                <Setter Property="FontFamily" Value="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="FontSize" Value="16" />
                            </Style>
                            <Style x:Key="TextBoxBorderStyle" TargetType="Border">
                                <Setter Property="Padding" Value="5" />
                                <Setter Property="Width" Value="250" />
                                <Setter Property="Height" Value="38" />
                                <Setter Property="Margin" Value="10,10,0,10" />
                                <Setter Property="Background" Value="#3E3E3E" />
                                <Setter Property="CornerRadius" Value="8" />
                            </Style>
                        </StackPanel.Resources>
                        <Border Style="{StaticResource TextBoxBorderStyle}">
                            <TextBox Style="{StaticResource TextBoxStyle}" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                        </Border>
                        <Border Style="{StaticResource TextBoxBorderStyle}">
                            <TextBox Style="{StaticResource TextBoxStyle}" Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                        </Border>
                        <Border Style="{StaticResource TextBoxBorderStyle}">
                            <TextBox Style="{StaticResource TextBoxStyle}" Text="{Binding BalanceString, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                        </Border>
                    </StackPanel>

                </StackPanel>

            </StackPanel>
            <StackPanel
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">
                <StackPanel.Resources>
                    <Style x:Key="MenuButtonBorder" TargetType="Border">
                        <Setter Property="Background" Value="red" />
                        <Setter Property="Margin" Value="10" />
                        <Setter Property="CornerRadius" Value="6" />
                        <Setter Property="Background">
                            <Setter.Value>
                                <SolidColorBrush Color="#9319B8" />
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Height" Value="35" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="#B824E4"
                                                Duration="0:0:0.2" />

                                            <DoubleAnimation
                                                Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                To="1.05"
                                                Duration="0:0:0.2" />
                                            <DoubleAnimation
                                                Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                To="1.05"
                                                Duration="0:0:0.2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>

                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="#9319B8"
                                                Duration="0:0:0.2" />
                                            <DoubleAnimation
                                                Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                To="1"
                                                Duration="0:0:0.2" />
                                            <DoubleAnimation
                                                Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                To="1"
                                                Duration="0:0:0.2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                    <Style x:Key="MenuButton" TargetType="Button">
                        <Setter Property="FontFamily" Value="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu" />
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="OverridesDefaultStyle" Value="True" />
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Cursor" Value="Hand" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Padding="5" Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </StackPanel.Resources>
                <Border>
                    <Border.Style>
                        <Style BasedOn="{StaticResource MenuButtonBorder}" TargetType="Border">
                            <Setter Property="BorderThickness" Value="4, 0, 4, 0" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsAdmin}" Value="True">
                                    <Setter Property="BorderBrush" Value="green" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsAdmin}" Value="False">
                                    <Setter Property="BorderBrush" Value="red" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Button
                        Padding="10"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding CreateAdminCommand}">
                        <Button.Style>
                            <Style BasedOn="{StaticResource MenuButton}" TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsAdmin}" Value="True">
                                        <Setter Property="Content" Value="Убрать администратора" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsAdmin}" Value="False">
                                        <Setter Property="Content" Value="Сделать администратором" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Border>
                <Border>
                    <Border.Style>
                        <Style BasedOn="{StaticResource MenuButtonBorder}" TargetType="Border">
                            <Setter Property="BorderThickness" Value="4, 0, 4, 0" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsBlocked}" Value="True">
                                    <Setter Property="BorderBrush" Value="red" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsBlocked}" Value="False">
                                    <Setter Property="BorderBrush" Value="green" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Button
                        Padding="10"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding BlockCommand}">
                        <Button.Style>
                            <Style BasedOn="{StaticResource MenuButton}" TargetType="Button">

                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsBlocked}" Value="True">
                                        <Setter Property="Content" Value="Разблокировать" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsBlocked}" Value="False">
                                        <Setter Property="Content" Value="Заблокировать" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Border>
                <Border>
                    <Border.Style>
                        <Style BasedOn="{StaticResource MenuButtonBorder}" TargetType="Border">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEnabled, ElementName=SaveButton}" Value="True">
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation
                                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                    To="#9319B8"
                                                    Duration="0:0:0.2" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.EnterActions>
                                    <DataTrigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation
                                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                    To="#3A3D41"
                                                    Duration="0:0:0.2" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.ExitActions>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Button
                        x:Name="SaveButton"
                        Padding="10"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding SaveCommand}"
                        Content="Сохранить"
                        Style="{StaticResource MenuButton}" />
                </Border>
                <Border Style="{StaticResource MenuButtonBorder}">
                    <Button
                        Padding="10"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding CloseCommand}"
                        Content="Закрыть"
                        Style="{StaticResource MenuButton}" />
                </Border>
            </StackPanel>
        </Grid>
    </Border>
</Window>
