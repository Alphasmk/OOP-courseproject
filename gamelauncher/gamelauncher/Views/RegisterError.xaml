<Window
    x:Class="gamelauncher.Views.RegisterError"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:gamelauncher.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="RegisterError"
    Width="320"
    Height="200"
    AllowsTransparency="True"
    Background="Transparent"
    Icon="/img/logo.png"
    Opacity="1"
    WindowStyle="None"
    mc:Ignorable="d">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="0" />
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <Storyboard x:Key="WindowFadeIn">
            <DoubleAnimation
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1"
                Duration="0:0:0.2" />
        </Storyboard>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource WindowFadeIn}" />
        </EventTrigger>
    </Window.Triggers>
    <Grid>
        <Border
            Margin="8"
            Background="#181818"
            CornerRadius="15">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="15"
                    Opacity="0.35"
                    ShadowDepth="0"
                    Color="Black" />
            </Border.Effect>
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Image
                        Width="30"
                        Margin="0,0,10,0"
                        Source="/img/exclamationerror.png" />
                    <StackPanel Orientation="Vertical">
                        <TextBlock
                            x:Name="message"
                            Width="220"
                            HorizontalAlignment="Center"
                            FontFamily="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu"
                            FontSize="17"
                            Foreground="White"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </StackPanel>
                <Border
                    Width="80"
                    Height="30"
                    Margin="0,40,0,0"
                    VerticalAlignment="Bottom"
                    Background="#9319B8"
                    CornerRadius="8">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#9319B8" />
                                </Setter.Value>
                            </Setter>

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation
                                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                    To="#B824E4"
                                                    Duration="0:0:0.2" />

                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>

                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation
                                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                    To="#9319B8"
                                                    Duration="0:0:0.2" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Button
                        Background="Transparent"
                        Command="{Binding CloseCommand}"
                        FontFamily="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu"
                        Foreground="White">
                        OK
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="OverridesDefaultStyle" Value="True" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="Cursor" Value="Hand" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Padding="5" Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                        <Button.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding CloseCommand}" />
                        </Button.InputBindings>
                    </Button>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>
