<Page
    x:Class="gamelauncher.Views.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:gamelauncher.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:gamelauncher.Views"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Title="GamePage"
    d:DesignHeight="750"
    d:DesignWidth="1200"
    mc:Ignorable="d">
    <Page.Resources>
        <Style x:Key="InvisibleButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style
            x:Key="HoverScaleButtonStyle"
            BasedOn="{StaticResource InvisibleButtonStyle}"
            TargetType="Button">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1" />
                </Setter.Value>
            </Setter>
            <Setter Property="Height" Value="25" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetProperty="RenderTransform.ScaleX"
                                    To="1.15"
                                    Duration="0:0:0.2" />
                                <DoubleAnimation
                                    Storyboard.TargetProperty="RenderTransform.ScaleY"
                                    To="1.1"
                                    Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetProperty="RenderTransform.ScaleX"
                                    To="1"
                                    Duration="0:0:0.2" />
                                <DoubleAnimation
                                    Storyboard.TargetProperty="RenderTransform.ScaleY"
                                    To="1"
                                    Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="CustomThumbStyle" TargetType="Thumb">
            <Setter Property="Height" Value="Auto" />
            <Setter Property="Width" Value="5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border Background="#808080" CornerRadius="2" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="CustomScrollBar" TargetType="ScrollBar">
            <Setter Property="Width" Value="4" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Track
                                x:Name="PART_Track"
                                IsDirectionReversed="True"
                                Maximum="{TemplateBinding Maximum}"
                                ViewportSize="{TemplateBinding ViewportSize}"
                                Value="{TemplateBinding Value}">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton
                                        Height="0"
                                        Command="ScrollBar.LineDownCommand"
                                        Style="{x:Null}" />
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource CustomThumbStyle}" />
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton
                                        Height="0"
                                        Command="ScrollBar.LineUpCommand"
                                        Style="{x:Null}" />
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="Line" TargetType="Border">
            <Setter Property="Height" Value="1" />
            <Setter Property="Background" Value="#585858" />
        </Style>
    </Page.Resources>
    <Border Margin="150,0,0,0" Background="#181818">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*" />
                <RowDefinition Height="0.6*" />
                <RowDefinition Height="0.3*" />
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.05*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border Grid.Column="1" Margin="0,0,0,10">
                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Bottom"
                        FontFamily="pack://application:,,,/fonts/Ubuntu-Bold.ttf #Ubuntu"
                        FontSize="35"
                        Foreground="White"
                        Text="{Binding Title}" />
                </Border>
            </Grid>
            <ScrollViewer
                x:Name="MainScrollViewer"
                Grid.Row="1"
                Grid.RowSpan="2"
                Grid.Column="0"
                Margin="0,0,30,0"
                HorizontalScrollBarVisibility="Disabled"
                ScrollChanged="MainScrollViewer_ScrollChanged"
                VerticalScrollBarVisibility="Hidden">
                <ScrollViewer.Resources>
                    <Style BasedOn="{StaticResource CustomScrollBar}" TargetType="ScrollBar" />
                </ScrollViewer.Resources>
                <StackPanel Orientation="Vertical">
                    <Viewbox
                        Grid.Column="0"
                        Margin="0,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top">
                        <Grid
                            Width="450"
                            Margin="25,0,5,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                            <Grid.Resources>
                                <Style x:Key="ThumbnailListBoxStyle" TargetType="ListBox">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="Padding" Value="5" />
                                    <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Hidden" />
                                    <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Disabled" />
                                </Style>

                                <Style x:Key="ThumbnailListBoxItemStyle" TargetType="ListBoxItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <ContentPresenter />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="Margin" Value="2" />
                                </Style>
                            </Grid.Resources>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.9*" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>

                            <Button
                                Grid.Row="1"
                                Grid.Column="0"
                                Height="20"
                                VerticalAlignment="Center"
                                Command="{Binding PreviousImageCommand}"
                                RenderOptions.BitmapScalingMode="HighQuality"
                                Style="{StaticResource HoverScaleButtonStyle}">
                                <Image Source="/img/left-arrow.png" />
                            </Button>

                            <mah:FlipView
                                x:Name="FlipView"
                                Grid.Row="0"
                                Grid.Column="0"
                                Grid.ColumnSpan="3"
                                VerticalAlignment="Center"
                                IndexPlacement="Bottom"
                                IsBannerEnabled="False"
                                IsNavigationEnabled="False"
                                ItemsSource="{Binding GameImages}"
                                MouseHoverBorderEnabled="False"
                                SelectedIndex="{Binding CurrentImageIndex, Mode=TwoWay}">
                                <mah:FlipView.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Background="Transparent"
                                            ClipToBounds="True"
                                            CornerRadius="10">
                                            <Image
                                                Height="250"
                                                HorizontalAlignment="Center"
                                                RenderOptions.BitmapScalingMode="HighQuality"
                                                Source="{Binding ImagePath}"
                                                Stretch="UniformToFill" />
                                        </Border>
                                    </DataTemplate>
                                </mah:FlipView.ItemTemplate>
                            </mah:FlipView>

                            <Button
                                Grid.Row="1"
                                Grid.Column="2"
                                Height="20"
                                VerticalAlignment="Center"
                                Command="{Binding NextImageCommand}"
                                RenderOptions.BitmapScalingMode="HighQuality"
                                Style="{StaticResource HoverScaleButtonStyle}">
                                <Image Source="/img/right-arrow.png" />
                            </Button>
                            <ListBox
                                x:Name="ThumbnailListBox"
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="0,5,0,0"
                                HorizontalAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                ItemContainerStyle="{StaticResource ThumbnailListBoxItemStyle}"
                                ItemsSource="{Binding GameImages}"
                                ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                SelectedItem="{Binding SelectedImage, Mode=TwoWay}"
                                Style="{StaticResource ThumbnailListBoxStyle}">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="3,0" CornerRadius="3">
                                            <Image
                                                Height="25"
                                                RenderOptions.BitmapScalingMode="HighQuality"
                                                Source="{Binding ImagePath}"
                                                Stretch="UniformToFill">
                                                <Image.Style>
                                                    <Style TargetType="Image">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                                                <Setter Property="Opacity" Value="1" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="False">
                                                                <Setter Property="Opacity" Value="0.5" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Image.Style>
                                            </Image>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Viewbox>
                </StackPanel>
            </ScrollViewer>
            <Grid
                Grid.Row="1"
                Grid.Column="1"
                Grid.RowSpan="2"
                Width="330"
                Margin="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border
                    Grid.Row="0"
                    Margin="10,10,10,0"
                    Background="#1E1E1E"
                    CornerRadius="15">
                    <StackPanel>
                        <Image
                            Grid.Row="1"
                            Height="90"
                            Margin="10,30,10,0"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Source="{Binding LogoPath}" />
                        <Border Margin="15,30,15,20" Style="{StaticResource Line}" />
                        <TextBlock
                            Margin="15,0,15,20"
                            FontFamily="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu"
                            FontSize="18"
                            Foreground="White">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsFree}" Value="True">
                                            <Setter Property="Text" Value="Бесплатно" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsFree}" Value="False">
                                            <Setter Property="Text" Value="{Binding Price, StringFormat='${0:N2}'}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <Border
                            Height="50"
                            Margin="15,0,15,20"
                            CornerRadius="10">
                            <Button
                                Padding="10"
                                Command="{Binding BuyGameCommand}"
                                FontFamily="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu"
                                FontSize="16"
                                Foreground="White">
                                <Button.Style>
                                    <Style BasedOn="{StaticResource InvisibleButtonStyle}" TargetType="Button">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsBought}" Value="False">
                                                <Setter Property="Content" Value="Купить сейчас" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsBought}" Value="True">
                                                <Setter Property="Content" Value="Уже в библиотеке" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#9319B8" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#B824E4"
                                                            Duration="0:0:0.2" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                            <Trigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#9319B8"
                                                            Duration="0:0:0.2" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                        </Trigger>
                                        <DataTrigger Binding="{Binding IsBought}" Value="True">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#3A3D41"
                                                            Duration="0:0:0.2" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                            <DataTrigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#9319B8"
                                                            Duration="0:0:0.2" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.ExitActions>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>

                        <Border
                            Height="50"
                            Margin="15,0,15,20"
                            CornerRadius="10">
                            <Button
                                Padding="10"
                                Command="{Binding LikeCommand}"
                                FontFamily="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu"
                                FontSize="16"
                                Foreground="White">
                                <Button.Style>
                                    <Style BasedOn="{StaticResource InvisibleButtonStyle}" TargetType="Button">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsLiked}" Value="True">
                                                <Setter Property="Content" Value="Убрать из желаемого" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsLiked}" Value="False">
                                                <Setter Property="Content" Value="В список желаемого" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#91709C" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#B891C4"
                                                            Duration="0:0:0.2" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                            <Trigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ColorAnimation
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#91709C"
                                                            Duration="0:0:0.2" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                        </Trigger>
                                        <DataTrigger Binding="{Binding IsBought}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsBought}" Value="False">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                        <Border Margin="15,0,15,15" Style="{StaticResource Line}" />
                        <Grid Height="20" Margin="15,0,15,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.5*" />
                                <ColumnDefinition Width="0.5*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu"
                                FontSize="16"
                                Foreground="#BDBDBD"
                                Text="Дата выхода:" />
                            <TextBlock
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                FontFamily="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu"
                                FontSize="16"
                                Foreground="White"
                                Text="{Binding Date, StringFormat='{}{0:dd.MM.yyyy}'}" />
                        </Grid>
                        <Border Margin="15,0,15,10" Style="{StaticResource Line}" />
                        <Grid Height="35" Margin="15,0,15,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu"
                                FontSize="16"
                                Foreground="#BDBDBD"
                                Text="Платформы:" />
                            <Border
                                Grid.Column="1"
                                Background="#585858"
                                CornerRadius="5"
                                Padding="2">
                                <StackPanel Orientation="Horizontal">
                                    <ItemsControl ItemsSource="{Binding Platforms}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Image
                                                    Width="22"
                                                    Height="22"
                                                    Margin="5,0"
                                                    Source="{Binding}"
                                                    RenderOptions.BitmapScalingMode="HighQuality"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
            <ScrollBar
                x:Name="ExternalScrollBar"
                Grid.Column="2"
                Margin="10,0,0,0"
                LargeChange="100"
                Maximum="{Binding ElementName=MainScrollViewer, Path=ScrollableHeight}"
                Minimum="0"
                Orientation="Vertical"
                SmallChange="10"
                Style="{StaticResource CustomScrollBar}"
                ValueChanged="ExternalScrollBar_ValueChanged"
                ViewportSize="{Binding ElementName=MainScrollViewer, Path=ViewportHeight}" />
        </Grid>

    </Border>

</Page>
