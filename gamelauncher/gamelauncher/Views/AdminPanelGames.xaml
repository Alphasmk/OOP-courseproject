<Page
    x:Class="gamelauncher.Views.AdminPanelGames"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:gamelauncher.Views"
    xmlns:local1="clr-namespace:gamelauncher.MVVM"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:gamelauncher.Model"
    Title="AdminPanelGames"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="GamesDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="#2D2D30" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#3F3F46" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="RowBackground" Value="#2D2D30" />
            <Setter Property="AlternatingRowBackground" Value="#252526" />
            <Setter Property="GridLinesVisibility" Value="None" />
            <Setter Property="HeadersVisibility" Value="Column" />
            <Setter Property="ScrollViewer.CanContentScroll" Value="True" />
            <Setter Property="ScrollViewer.PanningMode" Value="Both" />
            <Setter Property="Stylus.IsFlicksEnabled" Value="False" />
            <Setter Property="SelectionMode" Value="Single" />
            <Setter Property="SelectionUnit" Value="FullRow" />
            <Setter Property="AutoGenerateColumns" Value="False" />
            <Setter Property="ColumnHeaderHeight" Value="40" />
            <Setter Property="RowHeight" Value="60" />
            <Setter Property="FontSize" Value="14" />
        </Style>

        <!--  Стиль для заголовков столбцов  -->
        <Style x:Key="ColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#3E3E40" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#3F3F46" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Height" Value="40" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <!--  Стиль для ячеек  -->
        <Style x:Key="CellStyle" TargetType="DataGridCell">
            <Setter Property="BorderBrush" Value="#3F3F46" />
            <Setter Property="BorderThickness" Value="0,0,1,1" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Grid Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Конвертер для отображения жанров  -->
        <local1:GenresConverter x:Key="GenresConverter" />
        <local1:PlatformsConverter x:Key="PlatformsConverter" />
        <local1:PriceConverter x:Key="PriceConverter" />
        <local1:DateConverter x:Key="DateConverter" />
    </Page.Resources>

    <Grid>
        <DataGrid
            Margin="10"
            CellStyle="{StaticResource CellStyle}"
            ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}"
            ItemsSource="{Binding Games}"
            Style="{StaticResource GamesDataGridStyle}">
            <DataGrid.Columns>
                <!--  Колонка с обложкой  -->
                <DataGridTemplateColumn Width="80" Header="Cover">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image
                                Width="50"
                                Height="70"
                                Source="{Binding CoverImagePath}"
                                Stretch="UniformToFill" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!--  Название игры  -->
                <DataGridTextColumn
                    Width="200"
                    Binding="{Binding Title}"
                    Header="Title" />

                <!--  Жанры  -->
                <!--  Жанры  -->
                <DataGridTextColumn Width="150" Header="Genres">
                    <DataGridTextColumn.Binding>
                        <Binding Converter="{StaticResource GenresConverter}" Path="GameGenres" />
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>

                <!--  Платформы  -->
                <DataGridTextColumn Width="120" Header="Platforms">
                    <DataGridTextColumn.Binding>
                        <Binding Converter="{StaticResource PlatformsConverter}" Path="GamePlatforms" />
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>

                <!--  Цена  -->
                <DataGridTextColumn Width="80" Header="Price">
                    <DataGridTextColumn.Binding>
                        <Binding Converter="{StaticResource PriceConverter}" Path="Price" />
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>

                <!--  Дата выхода  -->
                <DataGridTextColumn Width="120" Header="Release Date">
                    <DataGridTextColumn.Binding>
                        <Binding Converter="{StaticResource DateConverter}" Path="ReleaseDate" />
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>

                <!--  Размер  -->
                <DataGridTextColumn
                    Width="80"
                    Binding="{Binding SizeGB, StringFormat={}{0} GB}"
                    Header="Size" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
