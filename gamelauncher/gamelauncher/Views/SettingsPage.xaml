<Page
    x:Class="gamelauncher.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:gamelauncher.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SettingsPage"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    d:DesignHeight="540"
    d:DesignWidth="960"
    mc:Ignorable="d">

    <Grid
        Margin="150,0,0,0"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Background="#181818">
        <StackPanel Margin="15,15,15,0" Orientation="Vertical">
            <TextBlock
                HorizontalAlignment="Center"
                FontFamily="pack://application:,,,/fonts/Ubuntu-Bold.ttf #Ubuntu"
                FontSize="25"
                Foreground="White">
                Аккаунт
            </TextBlock>
            <Border
                Width="1025"
                Height="1"
                Margin="0,15,0,0"
                Background="#3E3E3E" />
            <Border
                Height="65"
                MaxWidth="1000"
                Margin="0,20,0,0"
                Background="#292929"
                CornerRadius="5">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        FontFamily="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu"
                        FontSize="18"
                        Foreground="White">
                        Имя пользователя:
                    </TextBlock>
                    <Border
                        x:Name="ChangeAccountName"
                        Margin="5,0,10,0"
                        Background="#3E3E3E"
                        BorderThickness="0"
                        CornerRadius="5"
                        UseLayoutRounding="True">
                        <TextBox
                            Width="300"
                            Height="35"
                            Padding="5"
                            VerticalContentAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            FontFamily="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu"
                            FontSize="14"
                            Foreground="White"
                            GotFocus="TextBox_GotFocus"
                            LostFocus="TextBox_LostFocus"
                            Tag="{Binding ElementName=ChangeAccountName}" />
                    </Border>
                    <Border
                        Width="110"
                        Height="30"
                        Margin="5,3,0,3"
                        Background="#9319B8"
                        CornerRadius="5">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#9319B8" />
                                    </Setter.Value>
                                </Setter>

                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#B824E4"
                                                        Duration="0:0:0.2" />

                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>

                                        <Trigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#9319B8"
                                                        Duration="0:0:0.2" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.ExitActions>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Button
                            HorizontalContentAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="OverridesDefaultStyle" Value="True" />
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="Cursor" Value="Hand" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Padding="5" Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <Image Width="18" Source="/img/Check.png" />
                                <TextBlock
                                    FontFamily="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu"
                                    FontSize="14"
                                    Foreground="White">
                                    Сохранить
                                </TextBlock>
                            </StackPanel>
                        </Button>
                    </Border>

                </StackPanel>
            </Border>
            <Border
                Height="100"
                MaxWidth="1000"
                Margin="0,20,0,0"
                Background="#292929"
                CornerRadius="5">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Vertical">
                        <StackPanel
                            Margin="0,0,0,10"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                FontFamily="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu"
                                FontSize="18"
                                Foreground="White">
                                Пароль:
                            </TextBlock>
                            <Border
                                x:Name="ChangePassword"
                                Margin="5,0,10,0"
                                Background="#3E3E3E"
                                BorderThickness="0"
                                CornerRadius="5"
                                UseLayoutRounding="True">
                                <TextBox
                                    Width="300"
                                    Height="35"
                                    Padding="5"
                                    VerticalContentAlignment="Center"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontFamily="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu"
                                    FontSize="14"
                                    Foreground="White"
                                    GotFocus="TextBox_GotFocus"
                                    LostFocus="TextBox_LostFocus"
                                    Tag="{Binding ElementName=ChangePassword}" />
                            </Border>
                        </StackPanel>
                        <StackPanel
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                FontFamily="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu"
                                FontSize="18"
                                Foreground="White">
                                Повторите пароль:
                            </TextBlock>
                            <Border
                                x:Name="ChangePasswordRepeat"
                                Margin="5,0,10,0"
                                Background="#3E3E3E"
                                BorderThickness="0"
                                CornerRadius="5"
                                UseLayoutRounding="True">
                                <TextBox
                                    Width="300"
                                    Height="35"
                                    Padding="5"
                                    VerticalContentAlignment="Center"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontFamily="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu"
                                    FontSize="14"
                                    Foreground="White"
                                    GotFocus="TextBox_GotFocus"
                                    LostFocus="TextBox_LostFocus"
                                    Tag="{Binding ElementName=ChangePasswordRepeat}" />
                            </Border>
                        </StackPanel>
                    </StackPanel>
                    <Border
                        Width="110"
                        Height="30"
                        Margin="5,3,0,3"
                        Background="#9319B8"
                        CornerRadius="5">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#9319B8" />
                                    </Setter.Value>
                                </Setter>

                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#B824E4"
                                                        Duration="0:0:0.2" />

                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>

                                        <Trigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#9319B8"
                                                        Duration="0:0:0.2" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.ExitActions>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Button
                            HorizontalContentAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="OverridesDefaultStyle" Value="True" />
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="Cursor" Value="Hand" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Padding="5" Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <Image Width="18" Source="/img/Check.png" />
                                <TextBlock
                                    FontFamily="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu"
                                    FontSize="14"
                                    Foreground="White">
                                    Сохранить
                                </TextBlock>
                            </StackPanel>
                        </Button>
                    </Border>
                </StackPanel>
            </Border>
            <Border
                Width="1025"
                Height="1"
                Margin="0,15,0,0"
                Background="#3E3E3E" />
            <TextBlock
                Margin="0,15,0,0"
                HorizontalAlignment="Center"
                FontFamily="pack://application:,,,/fonts/Ubuntu-Bold.ttf #Ubuntu"
                FontSize="25"
                Foreground="White">
                Приложение
            </TextBlock>
            <Border
                Width="1025"
                Height="1"
                Margin="0,15,0,0"
                Background="#3E3E3E" />
            <StackPanel
                Margin="0,15,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    FontFamily="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu"
                    FontSize="18"
                    Foreground="White">
                    Тема приложения:
                </TextBlock>
                <RadioButton
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"
                    Content="Темная"
                    FontFamily="pack://application:,,,/fonts/Ubuntu-Light.ttf #Ubuntu"
                    FontSize="18"
                    Foreground="White"
                    GroupName="Theme"
                    IsChecked="True" />
                <RadioButton
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"
                    Content="Светлая"
                    FontFamily="pack://application:,,,/fonts/Ubuntu-Light.ttf #Ubuntu"
                    FontSize="18"
                    Foreground="White"
                    GroupName="Theme" />
            </StackPanel>
            <StackPanel
                Margin="0,15,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    FontFamily="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu"
                    FontSize="18"
                    Foreground="White">
                    Язык приложения:
                </TextBlock>
                <RadioButton
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"
                    Content="Русский"
                    FontFamily="pack://application:,,,/fonts/Ubuntu-Light.ttf #Ubuntu"
                    FontSize="18"
                    Foreground="White"
                    GroupName="Language"
                    IsChecked="True" />
                <RadioButton
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"
                    Content="English"
                    FontFamily="pack://application:,,,/fonts/Ubuntu-Light.ttf #Ubuntu"
                    FontSize="18"
                    Foreground="White"
                    GroupName="Language" />
            </StackPanel>
            <Border
                Width="1025"
                Height="1"
                Margin="0,10,0,0"
                Background="#3E3E3E" />
            <TextBlock
                Margin="0,15,0,0"
                HorizontalAlignment="Center"
                FontFamily="pack://application:,,,/fonts/Ubuntu-Bold.ttf #Ubuntu"
                FontSize="25"
                Foreground="White">
                Условия пользования
            </TextBlock>
            <Border
                Width="1025"
                Height="1"
                Margin="0,15,0,0"
                Background="#3E3E3E" />
            <TextBlock Margin="0,15,0,0" HorizontalAlignment="Center">
                <Hyperlink
                    FontFamily="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu"
                    FontSize="20"
                    Foreground="White">
                    Условия пользования
                    <Image Width="20" Source="/img/Link.png" />
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>
