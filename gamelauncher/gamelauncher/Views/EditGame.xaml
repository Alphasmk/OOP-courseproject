<Window
    x:Class="gamelauncher.Views.EditGame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:gamelauncher.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="EditGame"
    Width="950"
    Height="585"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <Storyboard x:Key="WindowFadeIn">
            <DoubleAnimation
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1"
                Duration="0:0:0.2" />
        </Storyboard>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource WindowFadeIn}" />
        </EventTrigger>
    </Window.Triggers>
    <Border
        Background="#252525"
        BorderBrush="#5D4465"
        BorderThickness="2"
        CornerRadius="20">
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="15"
                Opacity="0.35"
                ShadowDepth="0"
                Color="Black" />
        </Border.Effect>
        <Grid>
            <StackPanel Orientation="Vertical">
                <TextBlock
                    x:Name="Title"
                    Height="50"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontFamily="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu"
                    FontSize="18"
                    Foreground="White">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEdit}" Value="True">
                                    <Setter Property="Text" Value="{Binding Title, StringFormat='Изменение игры: {0}'}" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsEdit}" Value="False">
                                    <Setter Property="Text" Value="Создание игры" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <TextBlock
                    x:Name="UnderTitle"
                    Height="50"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontFamily="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu"
                    FontSize="16"
                    Foreground="White">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEdit}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsEdit}" Value="False">
                                    <Setter Property="Visibility" Value="Hidden" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                    <TextBlock.Text>
                        <MultiBinding StringFormat="ID: {0}, создана: {1}">
                            <Binding Path="Id" />
                            <Binding Path="Created" />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <StackPanel
                        Margin="0,-10,10,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Vertical">
                        <StackPanel.Resources>
                            <Style x:Key="TextBlockStyle" TargetType="TextBlock">
                                <Setter Property="Margin" Value="0,55,0,55" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="FontFamily" Value="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu" />
                                <Setter Property="FontSize" Value="16" />
                                <Setter Property="TextAlignment" Value="Right" />
                            </Style>
                            <Style x:Key="TextBoxStyle" TargetType="TextBox">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="VerticalContentAlignment" Value="Center" />
                                <Setter Property="FontFamily" Value="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="FontSize" Value="16" />
                            </Style>
                            <Style x:Key="TextBoxBorderStyle" TargetType="Border">
                                <Setter Property="Padding" Value="5" />
                                <Setter Property="Width" Value="300" />
                                <Setter Property="Height" Value="38" />
                                <Setter Property="Margin" Value="10,10,0,10" />
                                <Setter Property="Background" Value="#3E3E3E" />
                                <Setter Property="CornerRadius" Value="8" />
                            </Style>
                        </StackPanel.Resources>
                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                            <TextBlock Text="Название:">
                                <TextBlock.Style>
                                    <Style BasedOn="{StaticResource TextBlockStyle}" TargetType="TextBlock">
                                        <Setter Property="Margin" Value="0,15,0,0" />
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <Border Style="{StaticResource TextBoxBorderStyle}">
                                <TextBox Style="{StaticResource TextBoxStyle}" Text="{Binding Title, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            </Border>

                        </StackPanel>
                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                            <TextBlock Text="Описание:">
                                <TextBlock.Style>
                                    <Style BasedOn="{StaticResource TextBlockStyle}" TargetType="TextBlock">
                                        <Setter Property="Margin" Value="0,15,0,0" />
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <Border>
                                <Border.Style>
                                    <Style BasedOn="{StaticResource TextBoxBorderStyle}" TargetType="Border">
                                        <Setter Property="Height" Value="180" />
                                    </Style>
                                </Border.Style>
                                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                                    <TextBox.Style>
                                        <Style BasedOn="{StaticResource TextBoxStyle}" TargetType="TextBox">
                                            <Setter Property="TextWrapping" Value="Wrap" />
                                            <Setter Property="AcceptsReturn" Value="True" />
                                            <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
                                            <Setter Property="HorizontalScrollBarVisibility" Value="Disabled" />
                                            <Setter Property="VerticalContentAlignment" Value="Top" />
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </Border>
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                            <TextBlock Text="Цена:">
                                <TextBlock.Style>
                                    <Style BasedOn="{StaticResource TextBlockStyle}" TargetType="TextBlock">
                                        <Setter Property="Margin" Value="0,15,0,0" />
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <Border Style="{StaticResource TextBoxBorderStyle}">
                                <TextBox Style="{StaticResource TextBoxStyle}" Text="{Binding Price, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, StringFormat={}{0:N2}}" />
                            </Border>
                        </StackPanel>
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal" Margin="5, 0, 0, 0">
                            <TextBlock Text="Обложка:">
                                <TextBlock.Style>
                                    <Style BasedOn="{StaticResource TextBlockStyle}" TargetType="{x:Type TextBlock}">
                                        <Setter Property="Margin" Value="0,10,0,0" />
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <Border>
                                    <Border.Style>
                                        <Style BasedOn="{StaticResource TextBoxBorderStyle}" TargetType="{x:Type Border}">
                                            <Setter Property="Width" Value="240" />
                                            <Setter Property="HorizontalAlignment" Value="Left" />
                                            <Setter Property="Margin" Value="10, 0, 0, 0" />
                                        </Style>
                                    </Border.Style>
                                    <TextBox Text="{Binding ImagePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                        <TextBox.Style>
                                            <Style BasedOn="{StaticResource TextBoxStyle}" TargetType="{x:Type TextBox}" />
                                        </TextBox.Style>
                                    </TextBox>
                                </Border>
                                <Border>
                                    <Border.Style>
                                        <Style BasedOn="{StaticResource TextBoxBorderStyle}" TargetType="{x:Type Border}">
                                            <Setter Property="Width" Value="50" />
                                            <Setter Property="Height" Value="30" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                            <Setter Property="Padding" Value="3" />
                                        </Style>
                                    </Border.Style>
                                    <Button Command="{Binding BrowseImageCommand}">
                                        <Button.Style>
                                            <Style TargetType="{x:Type Button}">
                                                <Setter Property="OverridesDefaultStyle" Value="True" />
                                                <Setter Property="Background" Value="Transparent" />
                                                <Setter Property="Foreground" Value="White" />
                                                <Setter Property="BorderThickness" Value="0" />
                                                <Setter Property="Cursor" Value="Hand" />
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type Button}">
                                                            <Border Padding="5" Background="{TemplateBinding Background}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                        <Image
                                            Width="25"
                                            HorizontalAlignment="Center"
                                            Source="/img/Three_dots.png" />
                                    </Button>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel
                        Margin="0,0,0,0"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <StackPanel VerticalAlignment="Center" Orientation="Vertical">
                            <StackPanel.Resources>
                                <Style x:Key="TextBlockStyle" TargetType="TextBlock">
                                    <Setter Property="Margin" Value="0,20,0,20" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="FontFamily" Value="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu" />
                                    <Setter Property="FontSize" Value="16" />
                                    <Setter Property="TextAlignment" Value="Right" />
                                </Style>
                            </StackPanel.Resources>
                            <TextBlock Text="Жанры:">
                                <TextBlock.Style>
                                    <Style BasedOn="{StaticResource TextBlockStyle}" TargetType="TextBlock">
                                        <Setter Property="Margin" Value="0,0,0,180" />
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Text="Платформы:">
                                <TextBlock.Style>
                                    <Style BasedOn="{StaticResource TextBlockStyle}" TargetType="TextBlock">
                                        <Setter Property="Margin" Value="0,30,0,0" />
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Text="Размер(GB):">
                                <TextBlock.Style>
                                    <Style BasedOn="{StaticResource TextBlockStyle}" TargetType="TextBlock">
                                        <Setter Property="Margin" Value="0,55,0,0" />
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel VerticalAlignment="Center" Orientation="Vertical">
                            <StackPanel.Resources>
                                <Style x:Key="TextBoxStyle" TargetType="TextBox">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="VerticalContentAlignment" Value="Center" />
                                    <Setter Property="FontFamily" Value="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="FontSize" Value="16" />
                                </Style>
                                <Style x:Key="TextBoxBorderStyle" TargetType="Border">
                                    <Setter Property="Padding" Value="5" />
                                    <Setter Property="Width" Value="250" />
                                    <Setter Property="Height" Value="38" />
                                    <Setter Property="Margin" Value="10,10,0,10" />
                                    <Setter Property="Background" Value="#3E3E3E" />
                                    <Setter Property="CornerRadius" Value="8" />
                                </Style>
                            </StackPanel.Resources>
                            <Border
                                Width="300"
                                Height="200"
                                Margin="10,0,0,0"
                                Background="#3E3E3E"
                                CornerRadius="10">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderThickness" Value="0" />
                                    </Style>
                                </Border.Style>
                                <GroupBox
                                    Margin="0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    BorderThickness="0"
                                    FontFamily="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <ItemsControl ItemsSource="{Binding AllGenres}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel MaxHeight="180" Orientation="Vertical" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <CheckBox
                                                        Margin="5"
                                                        Content="{Binding Name}"
                                                        FontSize="10"
                                                        Foreground="White"
                                                        IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </GroupBox>
                            </Border>
                            <Border
                                Width="300"
                                Height="40"
                                Margin="10,40,0,0"
                                Background="#3E3E3E"
                                CornerRadius="10">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderThickness" Value="0" />
                                    </Style>
                                </Border.Style>
                                <GroupBox
                                    Margin="0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    BorderThickness="0"
                                    FontFamily="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <ItemsControl ItemsSource="{Binding AllPlatforms}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel MaxHeight="180" Orientation="Horizontal" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <CheckBox
                                                        Margin="5"
                                                        Content="{Binding Name}"
                                                        FontSize="13"
                                                        Foreground="White"
                                                        IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </GroupBox>
                            </Border>
                            <Border>
                                <Border.Style>
                                    <Style BasedOn="{StaticResource TextBoxBorderStyle}" TargetType="Border">
                                        <Setter Property="Margin" Value="10,35,0,10" />
                                        <Setter Property="Width" Value="300" />
                                    </Style>
                                </Border.Style>
                                <TextBox Style="{StaticResource TextBoxStyle}" Text="{Binding Size, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, StringFormat={}{0:N2}}" />
                            </Border>
                        </StackPanel>

                    </StackPanel>
                </StackPanel>


            </StackPanel>
            <StackPanel
                Margin="0,0,0,20"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">
                <StackPanel.Resources>
                    <Style x:Key="MenuButtonBorder" TargetType="Border">
                        <Setter Property="Background" Value="red" />
                        <Setter Property="Margin" Value="10" />
                        <Setter Property="CornerRadius" Value="6" />
                        <Setter Property="Background">
                            <Setter.Value>
                                <SolidColorBrush Color="#9319B8" />
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Height" Value="35" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="#B824E4"
                                                Duration="0:0:0.2" />

                                            <DoubleAnimation
                                                Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                To="1.05"
                                                Duration="0:0:0.2" />
                                            <DoubleAnimation
                                                Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                To="1.05"
                                                Duration="0:0:0.2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>

                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                To="#9319B8"
                                                Duration="0:0:0.2" />
                                            <DoubleAnimation
                                                Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                To="1"
                                                Duration="0:0:0.2" />
                                            <DoubleAnimation
                                                Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                To="1"
                                                Duration="0:0:0.2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                    <Style x:Key="MenuButton" TargetType="Button">
                        <Setter Property="FontFamily" Value="pack://application:,,,/fonts/Ubuntu-Medium.ttf #Ubuntu" />
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="OverridesDefaultStyle" Value="True" />
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Cursor" Value="Hand" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Padding="5" Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </StackPanel.Resources>
                <Border>
                    <Border.Style>
                        <Style BasedOn="{StaticResource MenuButtonBorder}" TargetType="Border" />
                    </Border.Style>
                    <Button
                        Padding="10"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding AddImagesCommand}">
                        <Button.Style>
                            <Style BasedOn="{StaticResource MenuButton}" TargetType="Button">
                                <Setter Property="Content" Value="Добавить изображений" />
                            </Style>
                        </Button.Style>
                    </Button>
                </Border>
                <Border>
                    <Border.Style>
                        <Style BasedOn="{StaticResource MenuButtonBorder}" TargetType="Border">
                            <Setter Property="BorderThickness" Value="4,0,4,0" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsActive}" Value="True">
                                    <Setter Property="BorderBrush" Value="green" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsActive}" Value="False">
                                    <Setter Property="BorderBrush" Value="red" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Button
                        Padding="10"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding ChangeActivityState}">
                        <Button.Style>
                            <Style BasedOn="{StaticResource MenuButton}" TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsActive}" Value="True">
                                        <Setter Property="Content" Value="Активна" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsActive}" Value="False">
                                        <Setter Property="Content" Value="Неактивна" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Border>

                <Border>
                    <Border.Style>
                        <Style BasedOn="{StaticResource MenuButtonBorder}" TargetType="Border">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEnabled, ElementName=SaveButton}" Value="True">
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation
                                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                    To="#9319B8"
                                                    Duration="0:0:0.2" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.EnterActions>
                                    <DataTrigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation
                                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                    To="#3A3D41"
                                                    Duration="0:0:0.2" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.ExitActions>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Button
                        x:Name="SaveButton"
                        Padding="10"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding SaveOrCreateCommand}">
                        <Button.Style>
                            <Style BasedOn="{StaticResource MenuButton}" TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsEdit}" Value="True">
                                        <Setter Property="Content" Value="Сохранить" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsEdit}" Value="False">
                                        <Setter Property="Content" Value="Создать" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Border>
                <Border Style="{StaticResource MenuButtonBorder}">
                    <Button
                        Padding="10"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding CloseCommand}"
                        Content="Закрыть"
                        Style="{StaticResource MenuButton}" />
                </Border>
            </StackPanel>
        </Grid>
    </Border>
</Window>